  <% @users.each do |user| %>
    <div class="card_social">
      <div class="card_social__info">
        <div class="card_social__avatar"><% if user.avatar.attached? %>
            <%= cl_image_tag user.avatar.key, class: "avatar_l" %>
          <% else %>
            <%= image_tag 'BeerWizardLogo.png', class: "avatar_s" %>
          <% end %>
        </div>
        <div class="card_social__user">
          <p class="card_social__id"><%= link_to user_path(user) do %>
            <%= user.name %><% end %>
          </p>
          <p class="card_social__city"><%= link_to user_path(user) do %>
            <%= user.location %><% end %></p>
          <span class="card_social__id" id="follow_count_<%= user.id%>">
            <%= render 'friendships/follow_count', user: user %>
          </span>
          <p><small class="text-muted">User Since: <%= user.created_at.strftime("%b %d, %Y")%></small></p>
        </div>
      </div>
      <% if  user != current_user %>
      <span id="follow_btn_<%= user.id%>">
        <%= render 'friendships/follow_button', user: user %>
      </span>
      <% end %>
    </div>
  <% end %>
