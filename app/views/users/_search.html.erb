<!-- Users index -->
<div class="users-index">

  <!-- Header back buton & user avatar -->
  <div class="header">
    <%= link_to "#" do %>
      <div class="back-button users-search__back-button">
        <%= inline_svg_tag "left-arrow.svg"%>
      </div>
    <% end %>
    <% if current_user.avatar.attached? %>
      <p><%= cl_image_tag current_user.avatar.key, class: "avatar_s users-index__avatar_s" %></p>
    <% else %>
      <p><%= image_tag 'BeerWizardLogo.png',  class: "avatar_s users-index__avatar_s" %></p>
    <% end %>
  </div>


    <p><span class="index" id="follow_btn_<%= user.id%>">
      <%= render 'friendships/follow_button', user: user %></span></p>

      <!-- Follow Count -->

      <div class='follow_count mt-2' id="follow_count_<%= user.id%>">
        <%= render 'friendships/follow_count', user: user %>
        </div>

      <!-- User Card -->

  <%= link_to user_path(user) do %>

  <% if user.avatar.attached? %>
    <%= cl_image_tag user.avatar.key, width: 50, height: 50, crop: :fill %>
      <% else %>
        <%= image_tag 'BeerWizardLogo.png',  width: 50, height: 50, crop: :fill %>
        <% end %>
        <h4><%= user.name %></h4>
        <p><%= user.location %></p>
      <p><small><b>Reviews Left: </b><%= user.reviews.count %></small></p>
    <p><small class="text-muted">User Since: <%= user.created_at.strftime("%b %d, %Y")%></small></p>
  <hr>
  <% end %>

  <!-- searchbar -->
   <form class="search-bar" action="">
      <input type="text" placeholder="Search user" name="search">
  </form>
</div>
  <!-- Users card-->
    <p>
<% users.each do |user| %>
  <div class="card_social">
    <div class="card_social__avatar"><% if user.avatar.attached? %>
        <%= cl_image_tag user.avatar.key, class: "avatar_s users-index__avatar_s" %>
      <% else %>
        <%= image_tag 'BeerWizardLogo.png', class: "avatar_s users-index__avatar_s" %>
      <% end %>
      <div>
        <div class="card_social__id"><%= link_to user_path(user) do %>
          <%= user.name %><% end %>
        </div>
        <div class="card_social__location">Montr√©al, QC</div>
      </div>
      <span class="index button-m" id="follow_btn_<%= user.id%>">
        <%= render 'friendships/follow_button', user: user %>
      </span>
    </div>
  </div>
<% end %>
