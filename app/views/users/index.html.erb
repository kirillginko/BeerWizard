<div class="container mt-4">
<h2>Users</h2>

    <p><span class="index button-m" id="follow_btn_<%= user.id%>">
      <%= render 'friendships/follow_button', user: user %></span></p>

<%= render 'shared/usersearch' %>
<hr>

<div id= "user_index">


<%= render 'users/search', users: @users %>

    <%= link_to user_path(user) do %>
    <h4><%= user.name %></h4>
    <% if user.avatar.attached? %>
    <%= cl_image_tag user.avatar.key, class: "avatar_s users-search__avatar_s" %>
      <% else %>
        <%= image_tag 'BeerWizardLogo.png', class: "avatar_s users-search__avatar_s"%>
          <% end %>
            <p><small><b>Reviews Left: </b><%= user.reviews.count %></small></p>
              <p><small class="text-muted">User Since: <%= user.created_at.strftime("%b %d, %Y")%></small></p>
              <hr>
  
</div>
</div>
