
<div class="user-profile">
  <div class="user-profile__container">
      <div class="user-profile__content">
        <div class="user-profile__avatar">
          <%= render 'shared/avatar-l' %>
        </div>
        <div class="user-profile__infos">
          <% if  @user != current_user %>
            <h2><%= @user.name%>'s Profile</h2>
          <% else  %>
            <h2><%= @user.name%></h2>
            <p><%= @user.location%></p>
          <% end %>
        </div>
      </div>
  </div>
  <ul uk-switcher="animation: uk-animation-fade" class="user-profile__numbers">
    <%= link_to "#" do %>
    <li class="user-profile__reviews">
      <h5>Reviews</h5>
      <p><%= @user.reviews.size %></p>
    <% end %>
    </li>
    <%= link_to "#" do %>
    <li class="user-profile__followers">
      <h5>Followers</h5>
      <p class="user-profile__bold-numbers"><%= @user.followers.count %></p>
    </li>
    <% end %>
    <%= link_to "#" do %>
    <li class="user-profile__follows">
      <h5>Following</h5>
      <p class="user-profile__bold-numbers"><%= @user.following.count %></p>
    </li>
    <% end %>
  </ul>
  <ul class="uk-switcher">
    <li class="user-profile__list-item bw-container">
        <% @user.following.each do |follow|%>
          <div class="card_social">
            <%= link_to user_path(follow) do %>
            <div class="card_social__avatar">
              <% if @user.avatar.attached? %>
                <%= cl_image_tag follow.avatar.key, class: "avatar_s--has-no-border" %>
              <% else %>
                  <%= image_tag 'BeerWizardLogo.png', class: "avatar_s" %>
              <% end %>
            </div>
            <div class="card_social__user">
              <p class="card_social__id"><%= link_to user_path(@user) do %>
                <%= follow.name %><% end %>
              </p>
              <p class="card_social__city"><%= link_to user_path(@user) do %>
                <%= @user.location %><% end %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </li>
    <li>Monsieur</li>
    <li>Gustave</li>
  </ul>
</div>

<ul class="uk-switcher">
    <li class="user-profile__list-item">
          <% @user.following.each do |follow|%>
            <%= link_to user_path(follow) do %>
            <% if @user.avatar.attached? %>
              <p><small><%= cl_image_tag follow.avatar.key, width: 50, height: 50, crop: :fill %></small> </p>
                <%= follow.name %>
            <% else %>
              <%= image_tag 'BeerWizardLogo.png',  width: 50, height: 50, crop: :fill %>
                  <%= follow.name %>
            <% end %>
          <% end %>
        <% end %>
    </li>
    <li>Monsieur</li>
    <li>Gustave</li>
  </ul>

    <!-- User Followers -->


    <hr>


<!-- User Profile Card -->

  <% if @user.avatar.attached? %>
    <p><%= cl_image_tag @user.avatar.key, width: 250, height: 250, crop: :fill %></p>
  <% else %>
    <p><%= image_tag 'BeerWizardLogo.png',  width: 250, height: 250, crop: :fill %></p>
    <% end %>

    <p><b>Name: </b><%= @user.name %></p>
        <p><b><%= @user.location%></b></p>
      <p><b>Email: </b><%= @user.email %></p>
        <p><small class="text-muted">User Since: <%= @user.created_at.strftime("%b %d, %Y")%></small></p>
    <br>

<hr>

<!--- Liked Beers --->

  <% if  @user != current_user %>
    <h4><%= @user.name%>'s Favorites</h4>
  <% else  %>
    <h4>My Liked Beers</h4>
  <% end %>

  <% current_user.find_liked_items.each do |liked_item|%>
    <%= link_to beer_path(liked_item) do %>
    <p><%= liked_item.name%></p>
    <% end %>
    <p><small><b>Brewery:</b> <%= liked_item.brewery %></small></p>
    <p><small><b>Description:</b> <%= liked_item.description %></small></p>
    <!-- avarage rating -->

    <div class="average-review-rating" id="average-review-rating" data-score=
      <%= liked_item.average_review %>></div>
    <span><small><b>Based on <%= liked_item.reviews.count %> reviews</b></small></span>
  <br>


    <% if liked_item.avatar.attached? %>
      <%= cl_image_tag liked_item.avatar.key, width: 150, height: 150, crop: :fill %>
      <% else %>
 <%= image_tag 'BeerWizardLogo.png',  width: 250, height: 250, crop: :fill %>     <% end %>
    <% end %>

<hr>

<!--Reviews  -->

<div class=" mt-4">
  <% if  @user != current_user %>
    <h4><%= @user.name%>'s Reviews</h4>
  <% else  %>
    <h4>My Reviews</h4>
  <% end %>

  <p><%= @user.reviews.size %> Reviews Left</p>
    <% @user.reviews.each do |reviews| %>
      <%= link_to beer_path(reviews.beer) do %>
        <p><%= reviews.beer.name%></p>
          <% if reviews.user.avatar.attached? %>
            <p><%= cl_image_tag reviews.user.avatar.key, width: 100, height: 100, :crop=>"thumb"%></p>
          <% else %>
              <%= image_tag 'BeerWizardLogo.png',  width: 50, height: 50, crop: :fill %>
          <% end %>
            <%= link_to user_path(reviews.user) do %>
            <p><%= reviews.user.name %>-</p>
          <% end %>
            <div class="review-rating" data-score="<%= reviews.stars %>"></div>
            <p><b><%= reviews.title %></b></p>
            <p><small><%= reviews.description %></small></p>
          <% end %>
        <% end %>



        <div class= "mt-2">
      <br>
    <%= link_to "edit profile", edit_user_path %>
  </div>
</div>

