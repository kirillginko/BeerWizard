<h1> Edit Review</h1>

<%= simple_form_for([@beer, @review]) do |form| %>
  Add a review:
  <div id="rating-form">
  </div>
  <%= form.input :description, as: :string %>
  <%= form.button :submit, class: "btn btn-danger" %>
  <% end %>

<script>
$(document).ready(function() {
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[stars]'
    });
  });
</script>
