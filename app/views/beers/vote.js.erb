$(document).ready(function() {
<% if current_user.liked? @beer %>
  $('.like-btn').addClass('liked');
<% else %>
  $('.like-btn').removeClass('like-btn');
<% end %>
});

showVotes = document.getElementById('likes-count-<%= @beer.id %>');
if (showVotes) showVotes.innerHTML = "<%= j render 'beers/vote', beer: @beer %>";


showHeart = document.getElementById('heart<%= @beer.id%>');
if (showHeart) showHeart.innerHTML = "<%= j render 'beers/like', beer: @beer %>";

showLike = document.getElementById('heart-show<%= @beer.id %>');
if (showLike) showLike.innerHTML = "<%= j render 'beers/favorite', beer: @beer %>";



